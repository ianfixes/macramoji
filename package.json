{
  "name": "extensimoji",
  "description": "A Slack-centric macro language for altering emoji",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": "Ian Katz <ianfixes@gmail.com>",
  "homepage": "https://github.com/ifreecarve/extensimoji#readme",
  "main": "lib",
  "scripts": {
    "prepublish": "coffee --bare -o lib -c src",
    "pretest": "rm -rf coverage/* && coffeeCoverage --inst istanbul . .",
    "test": "trap 'rm -f src/*.js test/*.js' EXIT; istanbul cover --print none coffeetape test/*.coffee",
    "posttest": "coffeelint src/ test/ && istanbul report text"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ifreecarve/extensimoji.git"
  },
  "keywords": [
    "emoji",
    "macro",
    "slack"
  ],
  "bugs": {
    "url": "https://github.com/ifreecarve/extensimoji/issues"
  },
  "devDependencies": {
    "coffee-coverage": "^2.0.1",
    "coffeelint": "^1.16.0",
    "coffeetape": "^1.0.1",
    "istanbul": "^0.4.5",
    "sinon": "^2.2.0"
  },
  "dependencies": {
    "async": "^2.4.1",
    "gm": "^1.23.0",
    "tmp": "0.0.31"
  }
}
